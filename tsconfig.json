{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/core/*"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@constants/*": [
        "app/constants/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}